<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@drawable/bg_gradient">

	<android.support.design.widget.TabLayout
		android:id="@+id/tabLayout"
		android:background="@android:color/transparent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<android.support.v4.view.ViewPager
		android:layout_below="@id/tabLayout"
		android:id="@+id/viewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/floatingActionButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_margin="16dp"/>

	<TextView
		android:id="@+id/floatingActionButtonText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/floatingActionButton"
		android:layout_alignLeft="@id/floatingActionButton"
		android:layout_alignRight="@id/floatingActionButton"
		android:layout_alignTop="@id/floatingActionButton"
		android:elevation="16dp"
		android:gravity="center"
		android:text="F"
		android:textStyle="bold"
		android:textColor="#FFFFFFFF"
		android:textSize="30sp"/>

</RelativeLayout>